{
  "name": "cybex-game-addon",
  "version": "0.0.1",
  "description": "A plugin can be integrated into another Cybex dapp",
  "main": "dist/index.js",
  "author": "ldwformat@gmail.com",
  "license": "MIT",
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --watch --verbose",
    "lint": "tslint --project tsconfig.json --config tslint.json && prettier {src,e2e,cypress}/**/**/**/**/**/**/*.{ts,json,md,scss} --check",
    "format": "prettier {src,e2e,cypress}/**/**/**/**/**/**/*.{ts,json,md,scss} --write"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/format": "^7.5.0",
    "@types/assert": "^1.4.2",
    "@types/events": "^3.0.0",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/jest": "^24.0.4",
    "@types/redux-logger": "^3.0.7",
    "commitlint": "^7.5.2",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "@types/node": "^11.9.4",
    "assert": "^1.4.1",
    "bigi": "^1.4.2",
    "bignumber.js": "^8.0.2",
    "bs58": "^4.0.1",
    "buffer": "^5.2.1",
    "bytebuffer": "^5.0.1",
    "deep-equal": "^1.0.1",
    "ecurve": "^1.0.6",
    "events": "^3.0.0",
    "isomorphic-fetch": "^2.2.1",
    "moment": "^2.24.0",
    "process": "^0.11.10",
    "reconnecting-websocket": "^4.1.10",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,e2e,cypress}/**/**/**/**/**/**/*.{ts,json,md,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.(tsx?|jsx?)$": "ts-jest"
    },
    "testRegex": "(\\.|/)(test|spec)\\.(tsx?|jsx?)$",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
