{
  "name": "cybex-game-addon",
  "version": "0.2.5",
  "description": "A plugin can be integrated into another Cybex dapp",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldwformat/cybex-game-addon.git"
  },
  "main": "dist/index.js",
  "author": "ldwformat@gmail.com",
  "license": "MIT",
  "scripts": {
    "dev": "webpack-dev-server --disable-host-check",
    "clean": "rm -rf lib dist",
    "build": "npm run clean && tsc && webpack",
    "test": "jest --verbose",
    "test:watch": "jest --watch --verbose",
    "lint": "tslint --project tsconfig.json --config tslint.json && prettier {src,e2e,cypress}/**/**/**/**/**/**/*.{ts,json,md,scss} --check",
    "format": "prettier {src,e2e,cypress}/**/**/**/**/**/**/*.{ts,json,md,scss} --write"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/format": "^7.5.0",
    "@types/assert": "^1.4.2",
    "@types/events": "^3.0.0",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/jest": "^24.0.4",
    "@types/lodash": "^4.14.122",
    "@types/node": "^11.9.4",
    "@types/qrcode.react": "^0.8.2",
    "@types/react": "^16.8.4",
    "@types/react-copy-to-clipboard": "^4.2.6",
    "@types/react-dom": "^16.8.2",
    "@types/react-redux": "^7.0.1",
    "@types/redux-logger": "^3.0.7",
    "awesome-typescript-loader": "^5.2.1",
    "commitlint": "^7.5.2",
    "compression-webpack-plugin": "^2.0.0",
    "css-loader": "^2.1.1",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "less": "^3.9.0",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "style-loader": "^0.23.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.0"
  },
  "dependencies": {
    "@material-ui/core": "^3.9.3",
    "@material-ui/icons": "^3.0.2",
    "@material-ui/styles": "^3.0.0-alpha.10",
    "assert": "^1.4.1",
    "bigi": "^1.4.2",
    "bignumber.js": "^8.0.2",
    "bs58": "^4.0.1",
    "buffer": "^5.2.1",
    "bytebuffer": "^5.0.1",
    "create-hash": "^1.2.0",
    "create-hmac": "^1.1.7",
    "crypto-js": "^3.1.9-1",
    "deep-equal": "^1.0.1",
    "ecurve": "^1.0.6",
    "events": "^3.0.0",
    "final-form": "^4.12.0",
    "i18next": "^15.0.6",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.11",
    "mdi-material-ui": "^5.10.0",
    "moment": "^2.24.0",
    "notistack": "^0.4.3",
    "patternlock": "^2.0.1",
    "process": "^0.11.10",
    "qrcode.react": "^0.9.3",
    "react": "^16.8.6",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^16.8.6",
    "react-final-form": "^4.1.0",
    "react-i18next": "^10.2.1",
    "react-jss": "^8.6.1",
    "react-redux": "^6.0.1",
    "react-svg-inline": "^2.1.1",
    "reconnecting-websocket": "^4.1.10",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-observable": "^1.0.0",
    "reselect": "^4.0.0",
    "rxjs": "^6.4.0",
    "secure-random": "^1.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,e2e,cypress}/**/**/**/**/**/**/*.{ts,json,md,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.(tsx?|jsx?)$": "ts-jest"
    },
    "testRegex": "(\\.|/)(test|spec)\\.(tsx?|jsx?)$",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
