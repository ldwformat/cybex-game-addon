{
  "name": "cybex-game-addon",
  "version": "0.0.1",
  "description": "A plugin can be integrated into another Cybex dapp",
  "main": "dist/index.js",
  "author": "ldwformat@gmail.com",
  "license": "MIT",
  "scripts": {
    "dev": "webpack-dev-server --disable-host-check",
    "build": "webpack",
    "test": "jest --verbose",
    "test:watch": "jest --watch --verbose",
    "lint": "tslint --project tsconfig.json --config tslint.json && prettier {src,e2e,cypress}/**/**/**/**/**/**/*.{ts,json,md,scss} --check",
    "format": "prettier {src,e2e,cypress}/**/**/**/**/**/**/*.{ts,json,md,scss} --write"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/format": "^7.5.0",
    "@types/assert": "^1.4.2",
    "@types/events": "^3.0.0",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/jest": "^24.0.4",
    "@types/qrcode.react": "^0.8.2",
    "@types/react": "^16.8.4",
    "@types/react-copy-to-clipboard": "^4.2.6",
    "@types/react-dom": "^16.8.2",
    "@types/react-redux": "^7.0.1",
    "@types/redux-form": "^7.5.2",
    "@types/redux-logger": "^3.0.7",
    "awesome-typescript-loader": "^5.2.1",
    "commitlint": "^7.5.2",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.0"
  },
  "dependencies": {
    "@material-ui/core": "^3.9.2",
    "@material-ui/icons": "^3.0.2",
    "@types/node": "^11.9.4",
    "assert": "^1.4.1",
    "bigi": "^1.4.2",
    "bignumber.js": "^8.0.2",
    "bs58": "^4.0.1",
    "buffer": "^5.2.1",
    "bytebuffer": "^5.0.1",
    "create-hash": "^1.2.0",
    "create-hmac": "^1.1.7",
    "crypto-js": "^3.1.9-1",
    "deep-equal": "^1.0.1",
    "ecurve": "^1.0.6",
    "events": "^3.0.0",
    "isomorphic-fetch": "^2.2.1",
    "moment": "^2.24.0",
    "notistack": "^0.4.3",
    "process": "^0.11.10",
    "qrcode.react": "^0.9.3",
    "react": "^16.8.3",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^16.8.3",
    "react-redux": "^6.0.1",
    "reconnecting-websocket": "^4.1.10",
    "redux": "^4.0.1",
    "redux-form": "^8.1.0",
    "redux-logger": "^3.0.6",
    "redux-observable": "^1.0.0",
    "reselect": "^4.0.0",
    "rxjs": "^6.4.0",
    "secure-random": "^1.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,e2e,cypress}/**/**/**/**/**/**/*.{ts,json,md,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.(tsx?|jsx?)$": "ts-jest"
    },
    "testRegex": "(\\.|/)(test|spec)\\.(tsx?|jsx?)$",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
